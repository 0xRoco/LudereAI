@model SignUpViewModel
@{
    ViewData["Title"] = "Sign Up";
}

<header class="site-header">
    <div class="hero-section text-center text-white" data-aos="zoom-in">
        <div class="overlay"></div>
        <div class="container d-flex flex-column justify-content-center align-items-center content" style="height: 100%;">
            <h1 class="display-1 fw-bold"><i class="fas fa-user-plus"></i> Join LudereAI</h1>
            <p class="lead">Sign up and unlock the power of AI-enhanced gaming.</p>
        </div>
    </div>
</header>

<div class="container py-5">
    <div class="row justify-content-center" data-aos="fade-up">
        <div class="col-md-8">
            <div class="pricing-card text-center p-4">
                <h2 class="mt-4 mb-4 beta-feature">Create Your Account</h2>
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger" role="alert">
                        <ul class="mb-0">
                            @foreach(var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <li>@error.ErrorMessage</li>
                            }
                        </ul>
                    </div>
                }
                <form method="post" asp-action="SignUp">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label for="firstName" class="form-label">First Name</label>
                            <div class="input-group">
                                <span class="input-group-text bg-primary text-white">
                                    <i class="fas fa-user"></i>
                                </span>
                                <input type="text" id="firstName" name="firstName" class="form-control"
                                       required placeholder="Enter first name"  value="@Model.FirstName"/>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label for="lastName" class="form-label">Last Name</label>
                            <div class="input-group">
                                <span class="input-group-text bg-primary text-white">
                                    <i class="fas fa-user"></i>
                                </span>
                                <input type="text" id="lastName" name="lastName" class="form-control"
                                       required placeholder="Enter last name"  value="@Model.LastName"/>
                            </div>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label for="username" class="form-label">Username</label>
                        <div class="input-group">
                            <span class="input-group-text bg-primary text-white">
                                <i class="fas fa-gamepad"></i>
                            </span>
                            <input type="text" id="username" name="username" class="form-control"
                                   required placeholder="Choose a username" value="@Model.Username"/>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label for="email" class="form-label">Email Address</label>
                        <div class="input-group">
                            <span class="input-group-text bg-primary text-white">
                                <i class="fas fa-envelope"></i>
                            </span>
                            <input type="email" id="email" name="email" class="form-control"
                                   required placeholder="Enter your email" value="@Model.Email"/>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label for="password" class="form-label">Password</label>
                        <div class="input-group">
                            <span class="input-group-text bg-primary text-white">
                                <i class="fas fa-lock"></i>
                            </span>
                            <input type="password" id="password" name="password" class="form-control"
                                   required placeholder="Create a password" value="@Model.Password"/>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label for="confirmPassword" class="form-label">Confirm Password</label>
                        <div class="input-group">
                            <span class="input-group-text bg-primary text-white">
                                <i class="fas fa-lock"></i>
                            </span>
                            <input type="password" id="confirmPassword" name="confirmPassword" class="form-control"
                                   required placeholder="Confirm your password" value="@Model.ConfirmPassword"/>
                        </div>
                    </div>

                    <div class="mb-4 form-check text-start">
                        <input type="checkbox" class="form-check-input" id="termsAccept" name="termsAccept" required>
                        <label class="form-check-label" for="termsAccept">
                            I accept the <a href="/terms" class="text-primary">Terms of Service</a> and
                            <a href="/privacy" class="text-primary">Privacy Policy</a>
                        </label>
                    </div>

                    <button type="submit" class="btn btn-primary btn-lg w-100 btn-pulse">Create Account</button>
                </form>

                <hr class="my-4" style="border-color: #007bff;">

                <div class="mt-3">
                    <p>Already have an account?
                        <a href="/Login" class="text-primary text-decoration-none">
                            <i class="fas fa-sign-in-alt ms-1"></i> Login
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>