@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<header class="site-header">
    <div class="hero-section text-center text-white" data-aos="zoom-in">
        <div class="overlay"></div>
        <div class="container d-flex flex-column justify-content-center align-items-center content" style="height: 100%;">
            <h1 class="display-1 fw-bold"><i class="fas fa-sign-in-alt"></i> Welcome Back</h1>
            <p class="lead">Log in to access your gaming assistant dashboard.</p>
        </div>
    </div>
</header>

<div class="container py-5">
    <div class="row justify-content-center" data-aos="fade-up">
        <div class="col-md-6">
            <div class="pricing-card text-center p-4">
                <h2 class="mt-4 mb-4">Login</h2>

                <form method="post" asp-action="Login">
                    <div class="mb-4">
                        <label for="username" class="form-label">Username</label>
                        <div class="input-group">
                            <span class="input-group-text bg-primary text-white">
                                <i class="fas fa-envelope"></i>
                            </span>
                            <input type="text" id="username" name="username" class="form-control" required
                                   placeholder="Enter your username" value="@Model.Username"/>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label for="password" class="form-label">Password</label>
                        <div class="input-group">
                            <span class="input-group-text bg-primary text-white">
                                <i class="fas fa-lock"></i>
                            </span>
                            <input type="password" id="password" name="password" class="form-control" required
                                   placeholder="Enter your password"  value="@Model.Password"/>
                        </div>
                    </div>

                    <div class="mb-4 form-check text-start">
                        <input type="checkbox" class="form-check-input" id="rememberMe" name="rememberMe">
                        <label class="form-check-label" for="rememberMe" @Model.RememberMe>Remember Me</label>
                    </div>

                    <button type="submit" class="btn btn-primary btn-lg w-100 btn-pulse">Login</button>
                </form>

                <hr class="my-4">

                <div class="mt-4">
                    <a href="/ForgotPassword" class="text-primary text-decoration-none">
                        <i class="fas fa-key me-2"></i>Forgot Password?
                    </a>
                </div>

                <div class="mt-3">
                    <p>Don't have an account?
                        <a href="/SignUp" class="text-primary text-decoration-none">
                            <i class="fas fa-user-plus ms-1"></i> Sign Up
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>