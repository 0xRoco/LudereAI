@model LudereAI.Web.Models.Waitlist.JoinWaitlistViewModel;
@{
    ViewData["Title"] = "Get Early Access to Your Context-Aware AI Gaming Companion";
}

<header class="site-header">
    <div class="hero-section text-center text-white" data-aos="zoom-in">
        <div class="overlay"></div>
        <div class="container d-flex flex-column justify-content-center align-items-center content"
             style="height: 100%;">
            <h1 class="display-6 fw-bold">AI-Powered Context Aware Gaming Assistance</h1>
            <p class="lead">The AI Gaming Assistant That Understands Your Game: Get Real-Time Insights and a Friendly Companion.</p>
            <a href="#waitlistForm" class="btn btn-light btn-lg btn-pulse">Join the Waitlist</a>
        </div>
    </div>
</header>

<div class="container py-5">
    <section id="features" class="py-5" data-aos="fade-up">
        <div class="container text-center">
            <h2 class="mb-4">Features</h2>
            <div class="row">
                <div class="col-md-4 mb-4" data-aos="flip-left" data-aos-delay="100">
                    <div class="feature-card p-4">
                        <i class="fas fa-brain  fa-3x mb-3 feature-icon"></i>
                        <h4>Context Aware</h4>
                        <p>Just like a good friend watching over your shoulder, LudereAI understands exactly what's happening in your game</p>
                    </div>
                </div>

                <div class="col-md-4 mb-4" data-aos="flip-left" data-aos-delay="200">
                    <div class="feature-card p-4">
                        <i class="fas fa-bolt fa-3x mb-3 feature-icon"></i>
                        <h4>Real-Time Analysis</h4>
                        <p>Instant feedback and suggestions to improve your gameplay as events unfold</p>
                    </div>
                </div>

                <div class="col-md-4 mb-4" data-aos="flip-left" data-aos-delay="300">
                    <div class="feature-card p-4">
                        <i class="fas fa-microphone-alt fa-3x mb-3 feature-icon"></i>
                        <h4>Voice Interaction</h4>
                        <p>Hands-free interaction with your AI assistant while staying focused on the game</p>
                    </div>
                </div>

                <div class="col-md-4 mb-4" data-aos="flip-left" data-aos-delay="400">
                    <div class="feature-card p-4">
                        <i class="fas fa-lightbulb  fa-3x mb-3 feature-icon"></i>
                        <h4>Smart Suggestions</h4>
                        <p>Intelligent recommendations tailored to your current game situation</p>
                    </div>
                </div>

                <div class="col-md-4 mb-4" data-aos="flip-left" data-aos-delay="500">
                    <div class="feature-card p-4">
                        <i class="fas fa-gamepad  fa-3x mb-3 feature-icon"></i>
                        <h4>Multi-Game Support</h4>
                        <p>Works seamlessly across your favorite PC games</p>
                    </div>
                </div>

                <div class="col-md-4 mb-4" data-aos="flip-left" data-aos-delay="600">
                    <div class="feature-card p-4">
                        <i class="fas fa-shield-alt fa-3x mb-3 feature-icon"></i>
                        <h4>Privacy Protected</h4>
                        <p>Full control over your data with customizable privacy settings</p>
                    </div>
                </div>

            </div>
        </div>
    </section>

    <section id="waitlistForm" class="py-5" data-aos="zoom-in">
        <div class="container justify-content-center text-center">
            <h2 class="text-center mb-4">Join the LudereAI Waitlist</h2>
            <p class="lead">We're currently in limited access mode. Join our waitlist to be notified when you can access
                LudereAI.</p>
            <form class="row justify-content-center mt-4" method="post" asp-action="Index">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="col-md-6">
                    <div class="input-group mb-3">
                        <input type="email" class="form-control" name="Email" placeholder="Enter your email"
                               value="@Model.Email" required/>
                        <button class="btn btn-primary" type="submit">Join Waitlist</button>
                    </div>
                </div>
            </form>
        </div>
    </section>

    <section id="screenshots" class="screenshots-section py-5" data-aos="fade-up">
        <div class="container text-center">
            <h2 class="mb-4">Preview</h2>
            <div class="row">
                <div class="col-md-4 mb-4 beta-feature" data-aos="fade-right">
                    <img src="images/preview1.jpg" alt="LudereAI with Kingdom Come Deliverance II" width="1859" height="879"
                         class="img-fluid rounded shadow clickable-screenshot" data-bs-toggle="modal"
                         data-bs-target="#imageModal">
                    <label class="text-primary">LudereAI with Kingdom Come Deliverance II</label>
                </div>
                <div class="col-md-4 mb-4 beta-feature" data-aos="fade-up">
                    <img src="images/preview2.jpg" alt="LudereAI with The Elder Scrolls III: Morrowind" width="1742" height="1013"
                         class="img-fluid rounded shadow clickable-screenshot" data-bs-toggle="modal"
                         data-bs-target="#imageModal">
                    <label class="text-primary">LudereAI with The Elder Scrolls III: Morrowind</label>
                </div>
                <div class="col-md-4 mb-4 beta-feature" data-aos="fade-left">
                    <img src="images/preview3.jpg" alt="LudereAI with Baldur's Gate III" width="2420" height="1442"
                         class="img-fluid rounded shadow clickable-screenshot" data-bs-toggle="modal"
                         data-bs-target="#imageModal">
                    <label class="text-primary">LudereAI with Baldur's Gate III</label>
                </div>
            </div>
            @*<div class="ratio ratio-16x9">
                <iframe src="https://www.youtube.com/embed/VIDEO_ID" title="Product Demo" allowfullscreen></iframe>
            </div>*@
        </div>
    </section>

    <div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-xxl">
            <div class="modal-content bg-dark">
                <div class="modal-body p-0">
                    <img src="" id="modalImage" class="img-fluid w-100" alt="Expanded Screenshot">
                </div>
            </div>
        </div>
    </div>


    <section id="faq" class="py-5" data-aos="fade-up">
        <div class="container">
            <h2 class="text-center mb-5">Frequently Asked Questions</h2>
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="accordion custom-accordion" id="faqAccordion">
                        <div class="accordion-item shadow-sm mb-3 border-0 rounded bg-dark" data-aos="fade-up"
                             data-aos-delay="100">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed bg-dark text-light" type="button"
                                        data-bs-toggle="collapse" data-bs-target="#faq1">
                                    <i class="fas fa-rocket me-2 text-primary"></i>
                                    How do I join the waitlist?
                                </button>
                            </h2>
                            <div id="faq1" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                <div class="accordion-body text-light">
                                    Simply enter your email above, and we’ll notify you when LudereAI is ready!
                                </div>
                            </div>
                        </div>

                        <div class="accordion-item shadow-sm mb-3 border-0 rounded bg-dark" data-aos="fade-up"
                             data-aos-delay="200">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed bg-dark text-light" type="button"
                                        data-bs-toggle="collapse" data-bs-target="#faq2">
                                    <i class="fas fa-shield-alt me-2 text-primary"></i>
                                    Is this AI safe to use in competitive games?
                                </button>
                            </h2>
                            <div id="faq2" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                <div class="accordion-body text-light">
                                    Yes! LudereAI is purely a companion that never interacts with the game in a way that
                                    would be considered cheating.
                                </div>
                            </div>
                        </div>

                        <div class="accordion-item shadow-sm mb-3 border-0 rounded bg-dark" data-aos="fade-up"
                             data-aos-delay="300">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed bg-dark text-light" type="button"
                                        data-bs-toggle="collapse" data-bs-target="#faq3">
                                    <i class="fas fa-gamepad me-2 text-primary"></i>
                                    Does this work with all games?
                                </button>
                            </h2>
                            <div id="faq3" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                <div class="accordion-body text-light">
                                    LudereAI supports a wide range of PC games. We’re constantly expanding our database
                                    to cover more titles.
                                </div>
                            </div>
                        </div>

                        <div class="accordion-item shadow-sm mb-3 border-0 rounded bg-dark" data-aos="fade-up"
                             data-aos-delay="400">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed bg-dark text-light" type="button"
                                        data-bs-toggle="collapse" data-bs-target="#faq4">
                                    <i class="fas fa-tv me-2 text-primary"></i>
                                    When will I get access?
                                </button>
                            </h2>
                            <div id="faq4" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                <div class="accordion-body text-light">
                                    We’ll email you once we open up early access. Stay tuned!
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
