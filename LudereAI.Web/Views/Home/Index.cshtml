<section id="promotions" class="card py-4 text-center text-white" data-aos="zoom-in" style="background: #007bff;">
    <div class="container">
        <h3>Limited Time Offer! 🎉</h3>
        <p class="lead mb-2">Use code <strong>FIRST30</strong> for <span style="color: yellow;">30% off</span> your first month!</p>
        <p class="small">Hurry, this offer expires soon!</p>
        <a id="promotionButton" href="/Signup" class="btn btn-light btn-lg mt-2 disabled">Claim Your Discount</a>
        <p id="countdown" class="lead text-white mt-2"></p>
    </div>
    <script>
        function startCountdown(duration) {
            let timer = duration, days, hours, minutes, seconds;
            let countdownDisplay = document.getElementById('countdown');
            let promotionContainer = document.getElementById('promotionButton');

            let interval = setInterval(() => {
                days = Math.floor(timer / (24 * 60 * 60));
                hours = Math.floor((timer % (24 * 60 * 60)) / (60 * 60));
                minutes = Math.floor((timer % (60 * 60)) / 60);
                seconds = timer % 60;

                countdownDisplay.textContent = `Offer expires in: ${days}d ${hours}h ${minutes}m ${seconds}s`;

                if (--timer < 0) {
                    clearInterval(interval);
                    countdownDisplay.textContent = "Offer expired!";
                    promotionContainer.style.display = 'none';
                }
            }, 1000);
        }
        startCountdown(0.5 * 24 * 60 * 60);
    </script>

</section>

