@{
    ViewData["Title"] = "Admin Dashboard";
}
<div class="container-fluid px-4">
    <h1 class="mt-4">Dashboard</h1>
    
    <div class="row">
        <div class="col-xl-3 col-md-6">
            <div class="card bg-primary text-white mb-4">
                <div class="card-body">
                    <h2>3000</h2>
                    <p>Total Users</p>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-success text-white mb-4">
                <div class="card-body">
                    <h2>100</h2>
                    <p>Active Users</p>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-info text-white mb-4">
                <div class="card-body">
                    <h2>3500</h2>
                    <p>Total Requests</p>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card  bg-success text-white mb-4">
                <div class="card-body">
                    <h2>System Status</h2>
                    <p>Healthy</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xl-8">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-chart-area me-1"></i>
                    Requests Per Day
                </div>
                <div class="card-body">
                    <canvas id="requestsChart" width="100%" height="15"></canvas>
                </div>
            </div>
        </div>
        <div class="col-xl-4">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-server me-1"></i>
                    System Resources
                </div>
                <div class="card-body">
                    <p>CPU Usage: 80%</p>
                    <p>Memory Usage: 30%</p>
                    <p>Last Updated: @DateTime.UtcNow.ToString("g")</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const ctx = document.getElementById('requestsChart');
        new Chart(ctx, {
            type: 'line',
            data: {
                labels: @Json.Serialize(new List<string>()
                        {
                            "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"
                        }),
                datasets: [{
                    label: 'Requests',
                    data: @Json.Serialize(new List<int>()
                          {
                                100, 1000, 8000, 1982, 5468, 3214, 6990
                          }),
                    borderColor: 'rgb(75, 192, 192)',
                    tension: 0.1
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
}