@model LudereAI.Web.Models.Admin.DashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid px-4 admin-dashboard">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mt-4">Admin Dashboard</h1>
        <div>
            <a href="@Url.Action("Users", "Admin")" class="btn btn-primary">
                <i class="fas fa-users me-2"></i>Manage Users
            </a>
            
            <a href="@Url.Action("Waitlist", "Admin")" class="btn btn-primary">
            <i class="fas fa-users me-2"></i>Manage Waitlist
            </a>
            
            
            <a href="@Url.Action("Logs", "Admin")" class="btn btn-primary">
                <i class="fas fa-history me-2"></i>View Logs
            </a>
            
            <a href="@Url.Action("Settings", "Admin")" class="btn btn-primary">
                <i class="fas fa-cog me-2"></i>Settings
            </a>
            
        </div>
    </div>

    <div class="row">
        <div class="col-xl-3 col-md-6">
            <div class="hover-card stat-card mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center m-2">
                        <div>
                            <h2 class="counter-value">@Model.TotalUsers</h2>
                            <p class="text-primary">Total Users</p>
                        </div>
                        <div class="stat-icon">
                            <i class="fas fa-users fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="hover-card stat-card mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center m-2">
                        <div>
                            <h2 class="counter-value">100</h2>
                            <p class="text-primary">Active Users</p>
                        </div>
                        <div class="stat-icon">
                            <i class="fas fa-user-check fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="hover-card stat-card mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center m-2">
                        <div>
                            <h2 class="counter-value">3500</h2>
                            <p class="text-primary">Total Requests</p>
                        </div>
                        <div class="stat-icon">
                            <i class="fas fa-exchange-alt fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="hover-card stat-card mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center m-2">
                        <div>
                            <h2>Status</h2>
                            <p class="text-primary">
                                <span class="badge bg-success">Healthy</span>
                            </p>
                        </div>
                        <div class="stat-icon">
                            <i class="fas fa-server fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xl-8">
            <div class="hover-card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center m-2">
                    <div>
                        <i class="fas fa-chart-area me-1"></i>
                        Requests Per Day
                    </div>
                    <div class="dropdown">
                        <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" id="chartRangeDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            Last 7 Days
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="chartRangeDropdown">
                            <li><a class="dropdown-item chart-range-option" data-range="7" href="#">Last 7 Days</a></li>
                            <li><a class="dropdown-item chart-range-option" data-range="14" href="#">Last 14 Days</a></li>
                            <li><a class="dropdown-item chart-range-option" data-range="30" href="#">Last 30 Days</a></li>
                        </ul>
                    </div>
                </div>
                <div class="card-body">
                    <canvas id="requestsChart" width="100%" height="40"></canvas>
                </div>
            </div>
        </div>
        <div class="col-xl-4">
            <div class="hover-card mb-4">
                <div class="card-header align-items-center m-2">
                    <i class="fas fa-server me-1"></i>
                    System Resources
                </div>
                <div class="card-body align-items-center m-2">
                    <div class="mb-3">
                        <label class="form-label d-flex justify-content-between">
                            CPU Usage
                            <span>80%</span>
                        </label>
                        <div class="progress">
                            <div class="progress-bar" role="progressbar" style="width: 80%" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label d-flex justify-content-between">
                            Memory Usage
                            <span>30%</span>
                        </label>
                        <div class="progress">
                            <div class="progress-bar bg-success" role="progressbar" style="width: 30%" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label d-flex justify-content-between">
                            Storage Usage
                            <span>45%</span>
                        </label>
                        <div class="progress">
                            <div class="progress-bar bg-info" role="progressbar" style="width: 45%" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                    <div class="text-end text-muted mt-3">
                        <small>Last Updated: @DateTime.UtcNow.ToString("g")</small>
                    </div>
                </div>
            </div>
            <div class="hover-card mb-4">
                <div class="card-header align-items-center m-2">
                    <i class="fas fa-bell me-1"></i>
                    Latest Notifications
                </div>
                <div class="card-body align-items-center m-2">
                    <div class="admin-notification">
                        <div class="notification-icon bg-warning">
                            <i class="fas fa-exclamation-triangle"></i>
                        </div>
                        <div class="notification-content">
                            <p>Storage usage has reached 80% on the main server</p>
                            <small class="text-muted">4 hours ago</small>
                        </div>
                    </div>
                    <div class="admin-notification">
                        <div class="notification-icon bg-success">
                            <i class="fas fa-check"></i>
                        </div>
                        <div class="notification-content">
                            <p>Database backup completed successfully</p>
                            <small class="text-muted">Today, 02:34 AM</small>
                        </div>
                    </div>
                    <div class="admin-notification">
                        <div class="notification-icon bg-info">
                            <i class="fas fa-user-plus"></i>
                        </div>
                        <div class="notification-content">
                            <p>5 new users registered in the last 24 hours</p>
                            <small class="text-muted">Yesterday, 11:41 PM</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12 align-items-center m-2">
            <div class="hover-card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center m-2">
                    <div>
                        <i class="fas fa-table me-1"></i>
                        Recent Activity
                    </div>
                    <a href="#" class="btn btn-sm btn-outline-primary">View All</a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-dark table-hover">
                            <thead>
                            <tr>
                                <th>User</th>
                                <th>Action</th>
                                <th>Message</th>
                                <th>IP Address</th>
                                <th>Date</th>
                            </tr>
                            </thead>
                            <tbody>
                            
                            @foreach (var log in Model.AuditLogs)
                            {
                                <tr>
                                    <td>@log.Account.Username</td>
                                    <td>@log.Action</td>
                                    <td>@log.Message</td>
                                    <td>@log.IPAddress</td>
                                    <td>@log.UpdatedAt.ToString("g")</td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>