@model LudereAI.Web.Models.Admin.WaitlistViewModel
@{
    ViewData["Title"] = "Waitlist Management";
}

<div class="container-fluid px-4 admin-dashboard">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mt-4">Waitlist Management</h1>
        <div>
            <a href="@Url.Action("Index", "Admin")" class="btn btn-outline-secondary me-2">
                <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
            </a>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#inviteUserModal">
                <i class="fas fa-envelope me-2"></i>Invite User
            </button>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.StatusMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @Model.StatusMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>
            @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row mb-4">
        <div class="col-md-4">
            <div class="hover-card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center m-2">
                        <div>
                            <h6 class="text-white mb-0">Total Entries</h6>
                            <h2 class="text-white mb-0">@Model.TotalEntries</h2>
                        </div>
                        <div>
                            <i class="fas fa-users fa-2x text-white"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="hover-card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center m-2">
                        <div>
                            <h6 class="text-white mb-0">Invited</h6>
                            <h2 class="text-white mb-0">@Model.InvitedCount</h2>
                        </div>
                        <div>
                            <i class="fas fa-envelope-open fa-2x text-white"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="hover-card bg-warning text-dark">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center m-2">
                        <div>
                            <h6 class="text-dark mb-0">Pending</h6>
                            <h2 class="text-dark mb-0">@Model.PendingCount</h2>
                        </div>
                        <div>
                            <i class="fas fa-hourglass-half fa-2x text-white"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="hover-card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center ">
            <div>
                <i class="fas fa-user-clock me-1"></i>
                Waitlist Entries
            </div>
            <div class="d-flex">
                <div class="input-group me-2" style="width: 250px;">
                    <input type="text" id="waitlistSearchInput" class="form-control" placeholder="Search by email...">
                    <button class="btn btn-outline-primary" type="button" id="waitlistSearchButton">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
                <select class="form-select me-2" id="statusFilter" style="width: 150px;">
                    <option value="all">All Statuses</option>
                    <option value="invited">Invited</option>
                    <option value="pending">Pending</option>
                </select>
                <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#inviteBatchModal">
                    <i class="fas fa-envelope-open text-white me-2"></i>Invite Batch
                </button>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-dark table-hover" id="waitlistTable">
                    <thead>
                    <tr>
                        <th>Position</th>
                        <th>Email</th>
                        <th>Joined Date</th>
                        <th>Status</th>
                        <th>Invited Date</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var entry in Model.Entries.OrderBy(e => e.Position))
                    {
                        <tr>
                            <td>@entry.Position</td>
                            <td>@entry.Email</td>
                            <td>@entry.JoinedDate.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>
                                @if (entry.IsInvited)
                                {
                                    <span class="badge bg-success">Invited</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">Pending</span>
                                }
                            </td>
                            <td>
                                @(entry.InvitedDate.HasValue ? entry.InvitedDate.Value.ToString("yyyy-MM-dd HH:mm") : "-")
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    @if (!entry.IsInvited)
                                    {
                                        <form asp-action="InviteUser" method="post" class="d-inline">
                                            <input type="hidden" name="email" value="@entry.Email">
                                            <button type="submit" class="btn btn-sm btn-outline-success me-1" title="Invite">
                                                <i class="fas fa-envelope text-white"></i>
                                            </button>
                                        </form>
                                    }
                                    <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal"
                                            data-bs-target="#removeModal" data-email="@entry.Email" title="Remove">
                                        <i class="fas fa-trash-alt text-white"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
            <div class="d-flex justify-content-between align-items-center mt-3">
                <div>
                    <span class="text-white">Showing 1 to @Model.Entries.Count() of @Model.TotalEntries entries</span>
                </div>
                <nav aria-label="Waitlist pagination">
                    <ul class="pagination">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item disabled">
                            <a class="page-link" href="#" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

<!-- Invite User Modal -->
<div class="modal fade" id="inviteUserModal" tabindex="-1" aria-labelledby="inviteUserModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content bg-dark">
            <div class="modal-header">
                <h5 class="modal-title" id="inviteUserModalLabel">Invite User</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="InviteUser" method="post" id="inviteUserForm">
                    <div class="mb-3">
                        <label for="inviteEmail" class="form-label">Email Address</label>
                        <input type="email" class="form-control" id="inviteEmail" name="email" placeholder="Enter email address" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" form="inviteUserForm" class="btn btn-primary">Invite User</button>
            </div>
        </div>
    </div>
</div>

<!-- Invite Batch Modal -->
<div class="modal fade" id="inviteBatchModal" tabindex="-1" aria-labelledby="inviteBatchModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content bg-dark">
            <div class="modal-header">
                <h5 class="modal-title" id="inviteBatchModalLabel">Invite Batch</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="InviteBatch" method="post" id="inviteBatchForm">
                    <div class="mb-3">
                        <label for="batchSize" class="form-label">Batch Size</label>
                        <input type="number" class="form-control" id="batchSize" name="batchSize"
                               min="1" max="100" value="10" placeholder="Enter batch size" required>
                        <small class="form-text text-muted">Number of users to invite from the waitlist</small>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" form="inviteBatchForm" class="btn btn-primary">Invite Batch</button>
            </div>
        </div>
    </div>
</div>

<!-- Remove Modal -->
<div class="modal fade" id="removeModal" tabindex="-1" aria-labelledby="removeModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content bg-dark">
            <div class="modal-header">
                <h5 class="modal-title" id="removeModalLabel">Confirm Removal</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to remove <span id="emailToRemove" class="fw-bold"></span> from the waitlist?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form asp-action="RemoveUser" method="post">
                    <input type="hidden" id="removeEmailInput" name="email">
                    <button type="submit" class="btn btn-danger">Remove</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Initialize DataTable
            var table = $('#waitlistTable').DataTable({
                "order": [[0, "asc"]],
                "pageLength": 25,
                "dom": '<"top"f>rt<"bottom"ip>',
                "language": {
                    "search": "",
                    "searchPlaceholder": "Search by email..."
                }
            });

            // Custom search box
            $('#waitlistSearchInput').on('keyup', function () {
                table.search(this.value).draw();
            });

            $('#waitlistSearchButton').on('click', function () {
                table.search($('#waitlistSearchInput').val()).draw();
            });

            // Status filter
            $('#statusFilter').on('change', function() {
                let status = $(this).val();

                if (status === 'all') {
                    table.column(3).search('').draw();
                } else if (status === 'invited') {
                    table.column(3).search('Invited').draw();
                } else if (status === 'pending') {
                    table.column(3).search('Pending').draw();
                }
            });

            // Handle remove modal
            $('#removeModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var email = button.data('email');
                $('#emailToRemove').text(email);
                $('#removeEmailInput').val(email);
            });

            // Auto-dismiss alerts after 5 seconds
            setTimeout(function () {
                $('.alert').alert('close');
            }, 5000);
        });
    </script>
}