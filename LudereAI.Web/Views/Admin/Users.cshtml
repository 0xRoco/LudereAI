                        <td>
                            <div class="btn-group">
                                <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#editUserModal" data-user-id="5">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button type="button" class="btn btn-warning btn-sm suspend-user-btn" data-user-id="5">
                                    <i class="fas fa-ban"></i>
                                </button>
                                <button type="button" class="btn btn-danger btn-sm delete-user-btn" data-user-id="5">
