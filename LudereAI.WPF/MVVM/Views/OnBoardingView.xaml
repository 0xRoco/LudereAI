<UserControl x:Class="LudereAI.WPF.MVVM.Views.OnBoardingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewModels="clr-namespace:LudereAI.WPF.MVVM.ViewModels"
             xmlns:wpf="clr-namespace:LudereAI.WPF"
             Background="{DynamicResource MaterialDesignBackground}"
             Foreground="{DynamicResource MaterialDesignBody}"
             FontFamily="{DynamicResource MaterialDesignFont}"
             d:DataContext="{d:DesignInstance viewModels:AuthViewModel}"
             mc:Ignorable="d">
    
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0 0 0 32">
            <TextBlock Text="Choose Your Path"
                       Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                       HorizontalAlignment="Center" />
            <TextBlock Text="Get Started With Your Personal Context-Aware AI-Powered Gaming Companion"
                       Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                       HorizontalAlignment="Center"
                       Margin="0 8 0 0" />
        </StackPanel>

        <ItemsControl Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <materialDesign:Card Width="250" Margin="24">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <materialDesign:PackIcon Kind="AccountOutline" 
                                             Width="50" 
                                             Height="50" 
                                             HorizontalAlignment="Center"/>
                    <Button Content="Continue as Guest"
                            Command="{Binding GuestCommand}"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Width="200"
                            materialDesign:ButtonAssist.CornerRadius="8"
                            HorizontalAlignment="Center"
                            Margin="15"/>
                </StackPanel>
            </materialDesign:Card>

            <materialDesign:Card Width="250" Margin="24">
                <StackPanel Orientation="Vertical" 
                            HorizontalAlignment="Center" >
                    <materialDesign:PackIcon Kind="Account" 
                                             Width="50" Height="50" 
                                             HorizontalAlignment="Center"/>
                    
                    <Button Content="Sign In"
                            Command="{Binding ShowLoginViewCommand}"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Width="200"
                            materialDesign:ButtonAssist.CornerRadius="8"
                            HorizontalAlignment="Center"
                            Margin="15">
                    </Button>
                </StackPanel>
            </materialDesign:Card>

            <materialDesign:Card Width="250" Margin="24">
                
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" >
                    
                    <materialDesign:PackIcon Kind="Register" 
                                             Width="50" Height="50" 
                                             HorizontalAlignment="Center"/>
                    
                    <Button Content="Create Account"
                            Command="{Binding ShowSignUpViewCommand}"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Width="200"
                            materialDesign:ButtonAssist.CornerRadius="8"
                            HorizontalAlignment="Center"
                            Margin="15">
                    </Button>
                </StackPanel>
            </materialDesign:Card>
        </ItemsControl>


        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" >
            <materialDesign:PackIcon Kind="ShieldCheck"
                                     Width="16" Height="16"
                                     Margin="0 0 8 0"
                                     VerticalAlignment="Center" />
            <TextBlock Text="Something about privacy and security" Style="{StaticResource MaterialDesignCaptionTextBlock}" />
        </StackPanel>
    </Grid>
</UserControl>