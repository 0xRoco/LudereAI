<Window x:Class="LudereAI.WPF.Views.ChatView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:LudereAI.WPF.ViewModels"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:converters="clr-namespace:LudereAI.WPF.Converters"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance viewModels:ChatViewModel}"
        Background="{DynamicResource MaterialDesignBackground}"
        Foreground="{DynamicResource MaterialDesignBody}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Style="{DynamicResource MaterialDesignWindow}"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        FontWeight="Regular"
        FontSize="14"
        TextOptions.TextFormattingMode="Ideal"
        Title="LudereAI - Chat"
        Height="800" Width="1200">

    <Window.Resources>
        <converters:MessageBackgroundConverter x:Key="MessageBackgroundConverter" />
        <converters:MessageAlignmentConverter x:Key="MessageAlignmentConverter" />
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

        <Style TargetType="materialDesign:Card" x:Key="MessageBubbleStyle">
            <Setter Property="Margin" Value="8 4" />
            <Setter Property="Padding" Value="16 12" />
            <Setter Property="MaxWidth" Value="600" />
            <Setter Property="HorizontalAlignment"
                    Value="{Binding Role, Converter={StaticResource MessageAlignmentConverter}}" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.15" />
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="SidebarButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
            <Setter Property="Margin" Value="0,8,0,0" />
            <Setter Property="Height" Value="36" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <!-- Collapsible Sidebar -->
        <materialDesign:Card Grid.Column="0"
                             UniformCornerRadius="0"
                             Background="{DynamicResource MaterialDesignPaper}"
                             Effect="{DynamicResource MaterialDesignShadowDepth3}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Toggle Button -->
                <ToggleButton x:Name="SidebarToggle"
                              Style="{StaticResource MaterialDesignActionToggleButton}"
                              Height="48"
                              Width="48"
                              Margin="8"
                              HorizontalAlignment="Left">
                    <ToggleButton.Content>
                        <materialDesign:PackIcon Kind="MenuOpen" Width="24" Height="24" />
                    </ToggleButton.Content>
                    <materialDesign:ToggleButtonAssist.OnContent>
                        <materialDesign:PackIcon Kind="Menu" Width="24" Height="24" />
                    </materialDesign:ToggleButtonAssist.OnContent>
                </ToggleButton>

                <!-- Expandable Content -->
                <Grid Grid.Row="1" Width="320">
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsChecked, ElementName=SidebarToggle}" Value="False">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!-- User Profile Section -->
                        <materialDesign:Card Grid.Row="0" Margin="20" UniformCornerRadius="16">
                            <StackPanel Margin="20">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                    <Border Width="40" Height="40" CornerRadius="20"
                                            Background="{DynamicResource PrimaryHueMidBrush}">
                                        <materialDesign:PackIcon Kind="Account"
                                                                 Width="24"
                                                                 Height="24"
                                                                 Foreground="White"
                                                                 HorizontalAlignment="Center"
                                                                 VerticalAlignment="Center" />
                                    </Border>
                                    <TextBlock Text="{Binding CurrentAccount.Username, FallbackValue=$Username$, Mode=TwoWay}"
                                               Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                               Margin="12,0,0,0"
                                               VerticalAlignment="Center" />
                                </StackPanel>

                                <TextBlock
                                    Visibility="{Binding CurrentAccount.IsSubscribed, Converter={StaticResource BooleanToVisibilityConverter}}"
                                    Style="{StaticResource MaterialDesignBody2TextBlock}"
                                    Margin="52,0,0,16">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="✨ {0} ({1})">
                                            <Binding Path="CurrentAccount.Subscription.PlanFriendlyName" Mode="TwoWay" FallbackValue="Free" />
                                            <Binding Path="CurrentAccount.Subscription.StatusFriendlyName" Mode="TwoWay"  FallbackValue=""/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                                
                                <!-- Subscription Buttons -->
                                <Expander Header="Subscription Options"
                                          Visibility="{Binding CanShowSubscriptionOptions, Converter={StaticResource BooleanToVisibilityConverter}}"
                                          Margin="0,8,0,0">
                                    <StackPanel Margin="8">
                                        <Button Style="{StaticResource SidebarButtonStyle}"
                                                Command="{Binding SubscribeProMonthlyCommand}">
                                            <TextBlock Text="Pro Monthly" />
                                        </Button>
                                        <Button Style="{StaticResource SidebarButtonStyle}"
                                                Command="{Binding SubscribeProYearlyCommand}">
                                            <TextBlock Text="Pro Yearly" />
                                        </Button>
                                        <Button Style="{StaticResource SidebarButtonStyle}"
                                                Command="{Binding SubscribeUltimateMonthlyCommand}">
                                            <TextBlock Text="Ultimate Monthly" />
                                        </Button>
                                        <Button Style="{StaticResource SidebarButtonStyle}"
                                                Command="{Binding SubscribeUltimateYearlyCommand}">
                                            <TextBlock Text="Ultimate Yearly" />
                                        </Button>
                                    </StackPanel>
                                </Expander>

                                <!-- New Chat Button -->
                                <Button Command="{Binding NewChatCommand}"
                                        Style="{StaticResource MaterialDesignFlatButton}"
                                        Height="44"
                                        materialDesign:ButtonAssist.CornerRadius="8"
                                        Background="{DynamicResource PrimaryHueMidBrush}"
                                        Foreground="White"
                                        Margin="0,8,0,0">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Plus" Margin="0,0,8,0" />
                                        <TextBlock Text="New Chat" FontWeight="Medium" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </materialDesign:Card>

                        <!-- Conversations List -->
                        <materialDesign:Card Grid.Row="1" Margin="20,0,20,20" UniformCornerRadius="16">
                            <ListBox SelectedItem="{Binding CurrentConversation, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                     ItemsSource="{Binding Conversations, Mode=TwoWay}"
                                     Style="{StaticResource MaterialDesignListBox}"
                                     Margin="8">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <materialDesign:Card Margin="4" UniformCornerRadius="8"
                                                             Background="Transparent"
                                                             BorderThickness="1.5"
                                                             BorderBrush="{DynamicResource MaterialDesignDivider}">
                                            <StackPanel Margin="16,12">
                                                <TextBlock Text="{Binding GameContext, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                           TextTrimming="CharacterEllipsis"
                                                           Style="{StaticResource MaterialDesignBody1TextBlock}"
                                                           FontWeight="Medium" />
                                                <TextBlock
                                                    Text="{Binding UpdatedAt, StringFormat={}{0:dd.MM.yyyy HH:mm}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                                    Margin="0,4,0,0"
                                                    Opacity="0.7" />
                                            </StackPanel>
                                        </materialDesign:Card>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </materialDesign:Card>

                        <!-- Logout Button -->
                        <Button Grid.Row="2"
                                Margin="20"
                                Command="{Binding LogoutCommand}"
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                Height="44"
                                materialDesign:ButtonAssist.CornerRadius="8"
                                BorderThickness="1.5">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Logout" Margin="0,0,8,0" />
                                <TextBlock Text="Logout" FontWeight="Medium" />
                            </StackPanel>
                        </Button>
                    </Grid>
                </Grid>
            </Grid>
        </materialDesign:Card>

        <!-- Main Chat Area -->
        <Grid Grid.Column="1" Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Game Context Bar -->
            <materialDesign:Card Grid.Row="0" Margin="0,0,0,24" UniformCornerRadius="12">
                <Grid Margin="20,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0"
                             materialDesign:HintAssist.Hint="Game Context"
                             Text="{Binding GameViewModel.CurrentGame, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.TextFieldCornerRadius="8"
                             Height="48"
                             Margin="0,0,16,0" />

                    <ComboBox Grid.Column="1"
                              materialDesign:HintAssist.Hint="Windows"
                              ItemsSource="{Binding Windows, Mode=TwoWay}"
                              SelectedItem="{Binding SelectedWindow, UpdateSourceTrigger=PropertyChanged}"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              materialDesign:TextFieldAssist.TextFieldCornerRadius="8"
                              Height="48"
                              Margin="0,0,16,0" />

                    <Button Grid.Column="2"
                            Command="{Binding RefreshProcessesCommand}"
                            Style="{StaticResource MaterialDesignFloatingActionMiniButton}">
                        <materialDesign:PackIcon Kind="Refresh" />
                    </Button>
                </Grid>
            </materialDesign:Card>

            <!-- Messages -->
            <ScrollViewer Grid.Row="1"
                          x:Name="ChatScroll"
                          VerticalScrollBarVisibility="Auto"
                          Margin="0,0,0,24">
                <ItemsControl ItemsSource="{Binding Messages, Mode=TwoWay}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <materialDesign:Card Style="{StaticResource MessageBubbleStyle}"
                                                 Background="{Binding Role, Converter={StaticResource MessageBackgroundConverter}}">
                                <StackPanel>
                                    <TextBlock Text="{Binding Role}"
                                               FontWeight="Medium"
                                               FontSize="12"
                                               Opacity="0.7"
                                               Margin="0,0,0,8" />
                                    <TextBlock Text="{Binding Content}"
                                               TextWrapping="Wrap"
                                               FontSize="14"
                                               LineHeight="20" />
                                </StackPanel>
                            </materialDesign:Card>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Thinking Indicator -->
            <materialDesign:Card Grid.Row="2"
                                 Style="{StaticResource MessageBubbleStyle}"
                                 Margin="8,0,8,16"
                                 Visibility="{Binding IsAssistantThinking, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel Orientation="Horizontal">
                    <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                 Value="35"
                                 IsIndeterminate="True"
                                 Width="20"
                                 Height="20"
                                 Margin="0,0,12,0" />
                    <TextBlock Text="Thinking..."
                               FontSize="14" />
                </StackPanel>
            </materialDesign:Card>

            <!-- Input Area -->
            <materialDesign:Card Grid.Row="3" UniformCornerRadius="16">
                <Grid Margin="20,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0"
                             x:Name="MessageInput"
                             IsEnabled="{Binding CanWriteMessage}"
                             materialDesign:HintAssist.Hint="Type your message..."
                             Text="{Binding CurrentMessage, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.TextFieldCornerRadius="12"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             MinHeight="56"
                             MaxHeight="150"
                             Margin="0,0,16,0">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding SendMessageCommand}" />
                        </TextBox.InputBindings>
                    </TextBox>

                    <StackPanel Grid.Column="1">
                        <Button Style="{StaticResource MaterialDesignFloatingActionButton}"
                                Command="{Binding SendMessageCommand}"
                                IsEnabled="{Binding CanSendMessage}"
                                Width="56"
                                Height="56"
                                materialDesign:ButtonAssist.CornerRadius="28">
                            <materialDesign:PackIcon Kind="Send" Width="24" Height="24" />
                        </Button>
                        
                    </StackPanel>
                </Grid>
            </materialDesign:Card>
        </Grid>
    </Grid>

</Window>