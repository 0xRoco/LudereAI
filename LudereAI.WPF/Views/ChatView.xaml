<Window x:Class="LudereAI.WPF.Views.ChatView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:LudereAI.WPF.ViewModels"
        xmlns:converters="clr-namespace:LudereAI.WPF.Converters"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=viewModels:ChatViewModel, IsDesignTimeCreatable=False}"
        Style="{DynamicResource TermWindow}"
        Title="LudereAI - Chat"
        Width="1200" Height="800"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <converters:RoleToHorizontalAlignmentConverter x:Key="RoleToAlignment"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibility"/>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="320"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.ColumnSpan="3"
                Grid.Row="0"
                Style="{DynamicResource TermHeaderStrip}"
                Panel.ZIndex="50">
            <DockPanel LastChildFill="False">
                <TextBlock Text="LudereAI :: CHAT MODULE"
                           Style="{DynamicResource TermHeaderText}"
                           DockPanel.Dock="Left"/>
                <TextBlock Text="{Binding CurrentConversation.GameContext, FallbackValue=New Conversation}"
                           Style="{DynamicResource TermHeaderMuted}"
                           Margin="18,0,0,0"
                           DockPanel.Dock="Left"/>
                <TextBlock Text="{Binding CurrentConversation.Messages.Count, FallbackValue=0, StringFormat=Messages: {0}}"
                           Style="{DynamicResource TermHeaderMuted}"
                           DockPanel.Dock="Right"/>
            </DockPanel>
        </Border>

        <Border Grid.Row="1" Grid.Column="0" Grid.RowSpan="2"
                Style="{DynamicResource TermSidebarLeft}" Padding="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="CONVERSATIONS" Style="{DynamicResource TermSectionTitle}"/>

                <ScrollViewer Grid.Row="1" Style="{DynamicResource TermScrollViewer}">
                    <ItemsControl ItemsSource="{Binding Conversations}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{DynamicResource TermListItem}" Margin="0 6 0 0">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="0" Text="{Binding GameContext}" FontSize="12" FontWeight="Bold" TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Grid.Row="1" Text="{Binding UpdatedAt, StringFormat={}{0:dd.MM.yyyy HH:mm}}"
                                                   Style="{DynamicResource TermTimestamp}" Margin="0,2,0,0"/>
                                        <Button Grid.Row="2" Content="OPEN"
                                                Command="{Binding DataContext.LoadConversationCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"
                                                Style="{DynamicResource TermButtonPrimary}"
                                                Margin="0,8,0,0" />
                                        <Button Grid.Row="3" Content="DELETE"
                                                Command="{Binding DataContext.DeleteConversationCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"
                                                Style="{DynamicResource TermButtonDanger}"
                                                Margin="0,8,0,0" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <Border Grid.Row="2" Style="{DynamicResource TermSubPanel}">
                    <StackPanel>
                        <TextBlock Text="ACTIONS" Style="{DynamicResource TermSectionTitle}"/>
                        <Button Content="NEW CONVERSATION"
                                Command="{Binding NewChatCommand}"
                                Style="{DynamicResource TermButtonPrimary}" Margin="0,6,0,0" MinWidth="160"/>

                        <Expander Header="SETTINGS" Style="{DynamicResource TermExpander}" Margin="0,10,0,0">
                            <StackPanel>
                                <Button Content="OVERLAY"
                                        Command="{Binding ShowOverlayCommand}"
                                        Style="{DynamicResource TermButtonOutline}"
                                        Margin="0,6,0,0"/>
                                <Button Content="SETTINGS"
                                        Command="{Binding OpenSettingsCommand}"
                                        Style="{DynamicResource TermButtonOutline}"
                                        Margin="0,6,0,0"/>
                            </StackPanel>
                        </Expander>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <Border Grid.Row="1" Grid.Column="2" Grid.RowSpan="2"
                Style="{DynamicResource TermSidebarRight}" Padding="12">
            <ScrollViewer Style="{DynamicResource TermScrollViewer}">
                <StackPanel>

                    <Border Style="{DynamicResource TermSubPanel}">
                        <StackPanel>
                            <TextBlock Text="PREDICTION" Style="{DynamicResource TermSectionTitle}"/>

                            <TextBlock Text="GAME NAME:" Style="{DynamicResource TermLabel}"/>
                            <TextBlock Text="{Binding PredicatedWindow.Title, FallbackValue=Not Detected}"
                                       Style="{DynamicResource TermValue}" Margin="0,0,0,8"/>

                            <TextBlock Text="PROCESS:" Style="{DynamicResource TermLabel}"/>
                            <TextBlock Text="{Binding PredicatedWindow.ProcessName, FallbackValue=Not Detected}"
                                       Style="{DynamicResource TermValue}" Margin="0,0,0,12"/>

                            <Button Content="SCAN"
                                    Command="{Binding PredictGameCommand}"
                                    Style="{DynamicResource TermButtonPrimary}" MinWidth="140"/>

                            <CheckBox Content="MANUAL OVERRIDE"
                                      IsChecked="{Binding IsOverrideEnabled}"
                                      Style="{DynamicResource TermCheckBox}"
                                      Margin="0,12,0,4"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{DynamicResource TermSubPanel}"
                            Visibility="{Binding IsOverrideEnabled, Converter={StaticResource BooleanToVisibility}}">
                        <StackPanel>
                            <TextBlock Text="MANUAL OVERRIDE" Style="{DynamicResource TermSubTitle}"/>

                            <TextBlock Text="GAME TITLE" Style="{DynamicResource TermLabel}" Margin="0,4,0,0"/>
                            <TextBox Text="{Binding ManualGameName, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{DynamicResource TermInput}" MinHeight="30"/>

                            <TextBlock Text="TARGET WINDOW" Style="{DynamicResource TermLabel}" Margin="0,8,0,0"/>
                            <ComboBox ItemsSource="{Binding Windows}"
                                      SelectedItem="{Binding ManualWindow}"
                                      Style="{DynamicResource TermComboBox}"
                                      MinWidth="220">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Title}" />
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>

                            <Button Content="REFRESH"
                                    Command="{Binding RefreshProcessesCommand}"
                                    Style="{DynamicResource TermButtonPrimary}" Margin="0,10,0,0" />

                            <TextBlock Text="Override uses selected window + manual game name."
                                       Style="{DynamicResource TermHint}" Margin="0,10,0,0" />
                        </StackPanel>
                    </Border>

                    <!--<Border Style="{DynamicResource TermSubPanel}" Margin="0,16,0,0">
                        <StackPanel>
                            <TextBlock Text="STATUS FEED" Style="{DynamicResource TermSubTitle}"/>
                            <ItemsControl ItemsSource="{Binding StatusFeed}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" Style="{DynamicResource TermFeedItem}"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>-->
                </StackPanel>
            </ScrollViewer>
        </Border>

        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <ScrollViewer Grid.Row="0"
                          x:Name="ChatScroll"
                          Style="{DynamicResource TermScrollViewer}"
                          Padding="4">
                <ItemsControl ItemsSource="{Binding CurrentConversation.Messages}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0 6">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0"
                                           Text="{Binding CreatedAt, StringFormat={}{0:HH:mm}}"
                                           Style="{DynamicResource TermTimestamp}"
                                           HorizontalAlignment="{Binding Role, Converter={StaticResource RoleToAlignment}}"/>
                                <Border Grid.Row="1"
                                        Style="{DynamicResource TermMessageBubble}"
                                        HorizontalAlignment="{Binding Role, Converter={StaticResource RoleToAlignment}}">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Role}"
                                                   Style="{DynamicResource TermRoleLabel}"/>
                                        <TextBlock Text="{Binding Content}"
                                                   Style="{DynamicResource TermMessageText}" />
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <Border Grid.Row="1"
                    Style="{DynamicResource TermProcessingBubble}"
                    Visibility="{Binding IsAssistantThinking, Converter={StaticResource BooleanToVisibility}}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="PROCESSING" Style="{DynamicResource TermProcessingText}"/>
                    <Rectangle Width="10" Height="10" VerticalAlignment="Center" HorizontalAlignment="Center"
                               Fill="{DynamicResource Term.Brush.AccentWarn}" Margin="10,0,0,1">
                        <Rectangle.Triggers>
                            <EventTrigger RoutedEvent="Rectangle.Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                         From="1" To="0.2"
                                                         Duration="0:0:1"
                                                         AutoReverse="True"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Rectangle.Triggers>
                    </Rectangle>
                </StackPanel>
            </Border>
        </Grid>

        <Border Grid.Row="2" Grid.Column="1"
                Style="{DynamicResource TermInputPanel}"
                Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0"
                         x:Name="MessageInput"
                         Text="{Binding CurrentMessage, UpdateSourceTrigger=PropertyChanged}"
                         Style="{DynamicResource TermInput}"
                         MinHeight="54"
                         MaxHeight="160"
                         TextWrapping="Wrap">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter" Command="{Binding SendMessageCommand}"/>
                    </TextBox.InputBindings>
                </TextBox>

                <Button Grid.Column="1"
                        Content="SEND"
                        Command="{Binding SendMessageCommand}"
                        IsEnabled="{Binding CanSendMessage}"
                        Style="{DynamicResource TermActionButton}"
                        Margin="14,0,0,0" />
            </Grid>
        </Border>

    </Grid>
</Window>