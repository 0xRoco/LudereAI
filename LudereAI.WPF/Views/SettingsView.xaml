<Window x:Class="LudereAI.WPF.Views.SettingsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:viewModels="clr-namespace:LudereAI.WPF.ViewModels"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance viewModels:SettingsViewModel}"
        Style="{DynamicResource TermWindow}"
        FontWeight="Regular"
        FontSize="14"
        TextOptions.TextFormattingMode="Ideal"
        WindowStartupLocation="CenterScreen"
        Title="Settings"
        Height="700"
        Width="900">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Style="{StaticResource TermHeaderStrip}">
            <DockPanel LastChildFill="False">
                <TextBlock Text="LudereAI :: SETTINGS"
                           Style="{StaticResource TermHeaderText}"
                           DockPanel.Dock="Left"/>
            </DockPanel>
        </Border>

        <Grid Grid.Row="1" Margin="16">
            <TabControl Style="{StaticResource TermTabControl}"
                        ItemContainerStyle="{StaticResource TermTabItem}">
                <TabItem Header="General">
                    <ScrollViewer Style="{StaticResource TermScrollViewer}">
                        <StackPanel Margin="12">
                            <Border Style="{StaticResource TermCard}">
                                <StackPanel>
                                    <TextBlock Text="APPLICATION" Style="{StaticResource TermSectionTitle}"/>
                                    <Grid Margin="0,6,0,6">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="180"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Language" Style="{StaticResource TermLabel}" VerticalAlignment="Center"/>
                                        <ComboBox Grid.Column="1"
                                                  ItemsSource="{Binding Languages}"
                                                  SelectedItem="{Binding AppSettings.General.Language}"
                                                  Style="{StaticResource TermComboBox}"
                                                  Width="220"/>
                                    </Grid>

                                    <Grid Margin="0,6,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="180"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Theme" Style="{StaticResource TermLabel}" VerticalAlignment="Center"/>
                                        <ComboBox Grid.Column="1"
                                                  ItemsSource="{Binding Themes}"
                                                  SelectedItem="{Binding AppSettings.General.Theme}"
                                                  Style="{StaticResource TermComboBox}"
                                                  Width="220"/>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <Border Style="{StaticResource TermCard}">
                                <StackPanel>
                                    <TextBlock Text="AI PROVIDER" Style="{StaticResource TermSectionTitle}"/>

                                    <Grid Margin="0,6,0,6">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="180"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Provider" Style="{StaticResource TermLabel}" VerticalAlignment="Center"/>
                                        <ComboBox Grid.Column="1"
                                                  ItemsSource="{Binding AIProviderTemplates}"
                                                  SelectedItem="{Binding SelectedAIProviderTemplate}"
                                                  DisplayMemberPath="ProviderType"
                                                  Style="{StaticResource TermComboBox}"
                                                  Width="260"/>
                                    </Grid>

                                    <Grid Margin="0,6,0,6">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="180"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="API Key" Style="{StaticResource TermLabel}" VerticalAlignment="Center"/>
                                        <PasswordBox Grid.Column="1"
                                                     Style="{StaticResource TermPasswordBox}"
                                                     materialDesign:PasswordBoxAssist.Password="{Binding AppSettings.General.AIProvider.ApiKey, UpdateSourceTrigger=PropertyChanged}"/>
                                    </Grid>

                                    <Grid Margin="0,6,0,6">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="180"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Model Name" Style="{StaticResource TermLabel}" VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="1"
                                                 Style="{StaticResource TermInput}"
                                                 Text="{Binding AppSettings.General.AIProvider.Model, UpdateSourceTrigger=PropertyChanged}"/>
                                    </Grid>

                                    <Grid Margin="0,6,0,0"
                                          Visibility="{Binding AppSettings.General.AIProvider.IsCustom, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="180"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Custom API URL" Style="{StaticResource TermLabel}" VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="1"
                                                 Style="{StaticResource TermInput}"
                                                 Text="{Binding AppSettings.General.AIProvider.BaseUrl, UpdateSourceTrigger=PropertyChanged}"/>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <Border Style="{StaticResource TermCard}">
                                <StackPanel>
                                    <TextBlock Text="TEXT-TO-SPEECH" Style="{StaticResource TermSectionTitle}"/>

                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock Text="Enable TTS" Style="{StaticResource TermLabel}" VerticalAlignment="Center"/>
                                        <ToggleButton Margin="12,0,0,0"
                                                      Style="{StaticResource TermSwitchToggle}"
                                                      IsChecked="{Binding AppSettings.General.TextToSpeechEnabled}"/>
                                    </StackPanel>

                                    <StackPanel Margin="0,8,0,0"
                                                IsEnabled="{Binding AppSettings.General.TextToSpeechEnabled}">
                                        <Grid Margin="0,6,0,6">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="180"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="TTS Provider" Style="{StaticResource TermLabel}" VerticalAlignment="Center"/>
                                            <ComboBox Grid.Column="1"
                                                      ItemsSource="{Binding TTSProviderTemplates}"
                                                      SelectedItem="{Binding SelectedTtsProviderTemplate}"
                                                      DisplayMemberPath="ProviderType"
                                                      Style="{StaticResource TermComboBox}"
                                                      Width="260"/>
                                        </Grid>

                                        <Grid Margin="0,6,0,6"
                                              Visibility="{Binding AppSettings.General.TTSProvider.RequiresApiKey, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="180"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="API Key" Style="{StaticResource TermLabel}" VerticalAlignment="Center"/>
                                            <PasswordBox Grid.Column="1"
                                                         Style="{StaticResource TermPasswordBox}"
                                                         materialDesign:PasswordBoxAssist.Password="{Binding AppSettings.General.TTSProvider.ApiKey, UpdateSourceTrigger=PropertyChanged}"/>
                                        </Grid>

                                        <Grid Margin="0,6,0,6"
                                              Visibility="{Binding AppSettings.General.TTSProvider.RequiresVoice, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="180"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="Voice ID" Style="{StaticResource TermLabel}" VerticalAlignment="Center"/>
                                            <TextBox Grid.Column="1"
                                                     Style="{StaticResource TermInput}"
                                                     Text="{Binding AppSettings.General.TTSProvider.VoiceId, UpdateSourceTrigger=PropertyChanged}"/>
                                        </Grid>

                                        <Grid Margin="0,6,0,0"
                                              Visibility="{Binding AppSettings.General.TTSProvider.RequiresBaseUrl, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="180"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="Endpoint URL" Style="{StaticResource TermLabel}" VerticalAlignment="Center"/>
                                            <TextBox Grid.Column="1"
                                                     Style="{StaticResource TermInput}"
                                                     Text="{Binding AppSettings.General.TTSProvider.BaseUrl, UpdateSourceTrigger=PropertyChanged}"/>
                                        </Grid>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <Border Style="{StaticResource TermCard}">
                                <StackPanel>
                                    <TextBlock Text="STARTUP OPTIONS" Style="{StaticResource TermSectionTitle}"/>

                                    <Grid Margin="0,6,0,6">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Auto-start with Windows" Style="{StaticResource TermLabel}" VerticalAlignment="Center"/>
                                        <ToggleButton Grid.Column="1"
                                                      Style="{StaticResource TermSwitchToggle}"
                                                      IsChecked="{Binding AppSettings.General.AutoStartWithWindows}"/>
                                    </Grid>

                                    <Grid Margin="0,6,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Minimize to System Tray" Style="{StaticResource TermLabel}" VerticalAlignment="Center"/>
                                        <ToggleButton Grid.Column="1"
                                                      Style="{StaticResource TermSwitchToggle}"
                                                      IsChecked="{Binding AppSettings.General.MinimizeToTray}"/>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <TabItem Header="Game Integration">
                    <ScrollViewer Style="{StaticResource TermScrollViewer}">
                        <StackPanel Margin="12">
                            <Border Style="{StaticResource TermCard}">
                                <StackPanel>
                                    <TextBlock Text="GAME DETECTION" Style="{StaticResource TermSectionTitle}"/>

                                    <Grid Margin="0,6,0,6">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Auto-detect running games" Style="{StaticResource TermLabel}" VerticalAlignment="Center"/>
                                        <ToggleButton Grid.Column="1"
                                                      Style="{StaticResource TermSwitchToggle}"
                                                      IsChecked="{Binding AppSettings.GameIntegration.Enabled}"/>
                                    </Grid>

                                    <Grid Margin="0,6,0,6">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Auto-capture screenshots" Style="{StaticResource TermLabel}" VerticalAlignment="Center"/>
                                        <ToggleButton Grid.Column="1"
                                                      Style="{StaticResource TermSwitchToggle}"
                                                      IsChecked="{Binding AppSettings.GameIntegration.AutoCaptureScreenshots}"/>
                                    </Grid>

                                    <Grid Margin="0,10,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="180"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Scan interval (seconds)" Style="{StaticResource TermLabel}" VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="1"
                                                 Width="140"
                                                 Style="{StaticResource TermInput}"
                                                 Text="{Binding AppSettings.GameIntegration.ScanInterval, UpdateSourceTrigger=PropertyChanged}"/>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <TabItem Header="Keybinds">
                    <ScrollViewer Style="{StaticResource TermScrollViewer}">
                        <StackPanel Margin="12">
                            <Border Style="{StaticResource TermCard}">
                                <StackPanel>
                                    <TextBlock Text="KEYBOARD SHORTCUTS" Style="{StaticResource TermSectionTitle}"/>
                                    <ItemsControl ItemsSource="{Binding KeyBindings}" Margin="0,8,0,8">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Style="{StaticResource TermListItem}">
                                                    <Grid Margin="8">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                        </Grid.RowDefinitions>

                                                        <TextBlock Grid.Column="0" Grid.Row="0"
                                                                   Text="{Binding Name}"
                                                                   FontSize="12"
                                                                   FontWeight="Bold"/>

                                                        <Border Grid.Column="1" Grid.Row="0" Grid.RowSpan="2"
                                                                CornerRadius="6"
                                                                Padding="16 8"
                                                                Margin="12 0"
                                                                MinWidth="120"
                                                                HorizontalAlignment="Right"
                                                                Background="{StaticResource Term.Brush.Panel}"
                                                                BorderBrush="{StaticResource Term.Brush.Border}"
                                                                BorderThickness="1"
                                                                VerticalAlignment="Center">
                                                            <TextBlock Text="{Binding KeyDisplay}"
                                                                       HorizontalAlignment="Center"
                                                                       FontWeight="SemiBold"/>
                                                        </Border>

                                                        <Button Grid.Column="2" Grid.Row="0" Grid.RowSpan="2"
                                                                IsEnabled="False"
                                                                Content="{Binding RecordButtonText}"
                                                                Command="{Binding StartRecordingCommand}"
                                                                Style="{StaticResource TermButtonOutline}"
                                                                Margin="12,0,0,0"
                                                                Width="110"
                                                                VerticalAlignment="Center"/>
                                                        <StackPanel Grid.Column="0" Grid.Row="1"
                                                                    Orientation="Horizontal" Margin="0,8,0,0">
                                                            <StackPanel Orientation="Horizontal" Margin="0,0,18,0">
                                                                <TextBlock Text="Global" Style="{StaticResource TermLabel}" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                                                <ToggleButton Style="{StaticResource TermSwitchToggle}" IsChecked="{Binding IsGlobal}"/>
                                                            </StackPanel>
                                                            <StackPanel Orientation="Horizontal">
                                                                <TextBlock Text="Enabled" Style="{StaticResource TermLabel}" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                                                <ToggleButton Style="{StaticResource TermSwitchToggle}" IsChecked="{Binding IsEnabled}"/>
                                                            </StackPanel>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <TextBlock Text="Note: Keybind changing is not yet implemented."
                                               Style="{StaticResource TermHint}"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <TabItem Header="About">
                    <ScrollViewer Style="{StaticResource TermScrollViewer}">
                        <StackPanel Margin="12">
                            <Border Style="{StaticResource TermCard}">
                                <StackPanel>
                                    <TextBlock Text="ABOUT LUDEREAI" Style="{StaticResource TermSectionTitle}" HorizontalAlignment="Center"/>
                                    <TextBlock Text="AI-Powered Context Aware Gaming Assistant"
                                               Style="{StaticResource TermLabel}"
                                               HorizontalAlignment="Center" Margin="0,4,0,12"/>
                                    <TextBlock Text="Made with ❤"
                                               Style="{StaticResource TermLabel}"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>
            </TabControl>
        </Grid>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="16">
            <Button Style="{StaticResource TermButtonOutline}"
                    Margin="0,0,12,0"
                    Height="36"
                    Width="110"
                    Content="Cancel"
                    Command="{Binding CancelCommand}"/>
            <Button Style="{StaticResource TermButtonPrimary}"
                    Height="36"
                    Width="110"
                    Content="Save"
                    Command="{Binding SaveCommand}"/>
        </StackPanel>
    </Grid>
</Window>