<Window x:Class="LudereAI.WPF.Views.SettingsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Background="{DynamicResource MaterialDesignBackground}"
        Foreground="{DynamicResource MaterialDesignBody}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Style="{DynamicResource MaterialDesignWindow}"
        FontWeight="Regular"
        FontSize="16"
        TextOptions.TextFormattingMode="Ideal"        
        WindowStartupLocation="CenterScreen"
        Title="Settings" Height="700" Width="900">
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Settings" HorizontalAlignment="Center"
                   Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                   Margin="0 0 0 16"/>

        <TabControl Grid.Row="1"  SelectedIndex="0"
                    Background="{DynamicResource MaterialDesignBackground}"
                    Foreground="{DynamicResource MaterialDesignBody}"
                    Style="{StaticResource MaterialDesignTabControl}">
            <TabItem Header="General">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="16">
                        <TextBlock Text="General Settings"
                                 Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                 Margin="0 0 0 16"/>
                        
                        <materialDesign:Card Padding="16" Margin="0 0 0 16">
                            <StackPanel>
                                <TextBlock Text="Language"
                                         Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                         Margin="0 0 0 8"/>
                                <ComboBox materialDesign:HintAssist.Hint="Select language"
                                        Margin="0 8 0 0">
                                    <ComboBoxItem Content="English"/>
                                </ComboBox>
                            </StackPanel>
                        </materialDesign:Card>
                        
                        <materialDesign:Card Padding="16" Margin="0 0 0 16">
                            <StackPanel>
                                <TextBlock Text="Application Theme"
                                           Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                           Margin="0 0 0 8"/>
                                <ComboBox materialDesign:HintAssist.Hint="Select theme"
                                          Margin="0 8 0 0">
                                    <ComboBoxItem Content="Light"/>
                                    <ComboBoxItem Content="Dark"/>
                                    <ComboBoxItem Content="System"/>
                                </ComboBox>
                            </StackPanel>
                        </materialDesign:Card>

                        <materialDesign:Card Padding="16">
                            <StackPanel>
                                <TextBlock Text="Startup Options"
                                         Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                         Margin="0 0 0 8"/>
                                <CheckBox Content="Auto-start with Windows" 
                                          IsChecked="{Binding Settings.General.AutoStartWithWindows}" Margin="0 0 0 8"/>
                                <CheckBox Content="Minimize to System Tray" 
                                          IsChecked="{Binding Settings.General.MinimizeToTray}" Margin="0 0 0 8"/>
                                <CheckBox Content="Check for Updates Automatically" 
                                          IsChecked="{Binding Settings.General.AutoCheckUpdates}" Margin="0 0 0 8"/>
                            </StackPanel>
                        </materialDesign:Card>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <TabItem Header="Game Integration">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="16">
                        <TextBlock Text="Game Integration Settings"
                                 Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                 Margin="0 0 0 16"/>
                        
                        <materialDesign:Card Padding="16">
                            <StackPanel>
                                <TextBlock Text="Game Detection"
                                           Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                           Margin="0 0 0 16">
                                </TextBlock>
                                
                                <CheckBox Content="Auto-detect running games"
                                          Margin="0 0 0 8"/>
                                
                                <DockPanel Margin="0,8">
                                    <TextBlock Text="Scan interval (seconds)"/>
                                    <ComboBox Style="{StaticResource MaterialDesignComboBox}"
                                              Width="120"
                                              ItemsSource="{Binding ScanIntervals}"
                                              SelectedItem="{Binding SelectedScanInterval}"/>
                                </DockPanel>
                            </StackPanel>
                        </materialDesign:Card>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Privacy">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="16">
                        <TextBlock Text="Data Settings"
                                 Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                 Margin="0 0 0 16"/>
                        
                        <materialDesign:Card Padding="16">
                            <StackPanel>
                                <CheckBox Content="Allow anonymous data collection"
                                          Margin="0 0 0 8"/>
                                <CheckBox Content="Allow storage of captured screenshots for analysis and model training"
                                          Margin="0 0 0 8"/>
                            </StackPanel>
                        </materialDesign:Card>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="About">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="16">
                        
                        <materialDesign:Card Padding="16">
                            <StackPanel>
                                
                            </StackPanel>
                        </materialDesign:Card>
                        
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
