<Window x:Class="LudereAI.WPF.Views.SettingsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:viewModels="clr-namespace:LudereAI.WPF.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance viewModels:SettingsViewModel}"
        Background="{DynamicResource MaterialDesignPaper}"
        Foreground="{DynamicResource MaterialDesignBody}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Style="{DynamicResource MaterialDesignWindow}"
        FontWeight="Regular"
        FontSize="14"
        TextOptions.TextFormattingMode="Ideal"
        WindowStartupLocation="CenterScreen"
        Title="Settings" Height="700" Width="900">

    <Window.Resources>
        <Style x:Key="SettingsSectionHeaderStyle" TargetType="TextBlock"
               BasedOn="{StaticResource MaterialDesignHeadline6TextBlock}">
            <Setter Property="Margin" Value="0 0 0 16" />
            <Setter Property="FontWeight" Value="Medium" />
        </Style>

        <Style x:Key="SettingsCategoryHeaderStyle" TargetType="TextBlock"
               BasedOn="{StaticResource MaterialDesignSubtitle1TextBlock}">
            <Setter Property="Margin" Value="0 0 0 12" />
            <Setter Property="FontWeight" Value="Medium" />
        </Style>

        <Style x:Key="SettingsCardStyle" TargetType="materialDesign:Card">
            <Setter Property="Margin" Value="0 0 0 16" />
            <Setter Property="Padding" Value="20" />
            <Setter Property="UniformCornerRadius" Value="8" />
            <Setter Property="Background" Value="{DynamicResource MaterialDesignCardBackground}" />
        </Style>

        <Style x:Key="SettingsToggleStyle" TargetType="ToggleButton"
               BasedOn="{StaticResource MaterialDesignSwitchToggleButton}">
            <Setter Property="Margin" Value="8 0 0 0" />
        </Style>

        <Style x:Key="SettingsHelpTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBodyLight}" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Margin" Value="24 4 0 0" />
            <Setter Property="TextWrapping" Value="Wrap" />
        </Style>

        <Style x:Key="KeybindCardStyle" TargetType="materialDesign:Card">
            <Setter Property="Margin" Value="0 0 0 12" />
            <Setter Property="Padding" Value="16" />
            <Setter Property="UniformCornerRadius" Value="8" />
            <Setter Property="Background" Value="{DynamicResource MaterialDesignCardBackground}" />
        </Style>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="Settings" HorizontalAlignment="Center"
                   Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                   FontWeight="Medium"
                   Margin="0 0 0 24" />

        <TabControl Grid.Row="1" SelectedIndex="0"
                    Background="{DynamicResource MaterialDesignBackground}"
                    Foreground="{DynamicResource MaterialDesignBody}"
                    Style="{StaticResource MaterialDesignTabControl}"
                    materialDesign:ColorZoneAssist.Mode="Standard">

            <!-- GENERAL TAB -->
            <TabItem Header="General">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="24">
                        <TextBlock Text="General Settings"
                                   Style="{StaticResource SettingsSectionHeaderStyle}" />

                        <materialDesign:Card
                            Background="{DynamicResource MaterialDesignPaper}"
                            Style="{StaticResource SettingsCardStyle}">
                            <StackPanel>
                                <TextBlock Text="Application"
                                           Style="{StaticResource SettingsCategoryHeaderStyle}" />

                                <Grid Margin="0 12 0 12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="180" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="Language"
                                               VerticalAlignment="Center" />

                                    <ComboBox Grid.Column="1"
                                              materialDesign:HintAssist.Hint="Select language"
                                              ItemsSource="{Binding Languages}"
                                              SelectedItem="{Binding Settings.General.Language}"
                                              Width="200"
                                              HorizontalAlignment="Left" />
                                </Grid>

                                <Grid Margin="0 12 0 0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="180" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="Theme"
                                               VerticalAlignment="Center" />

                                    <ComboBox Grid.Column="1"
                                              materialDesign:HintAssist.Hint="Select theme"
                                              ItemsSource="{Binding Themes}"
                                              SelectedItem="{Binding Settings.General.Theme}"
                                              Width="200"
                                              HorizontalAlignment="Left" />
                                </Grid>
                            </StackPanel>
                        </materialDesign:Card>

                        <materialDesign:Card
                            Background="{DynamicResource MaterialDesignPaper}"
                            Style="{StaticResource SettingsCardStyle}">
                            <StackPanel>
                                <TextBlock Text="AI Provider"
                                           Style="{StaticResource SettingsCategoryHeaderStyle}" />

                                <ComboBox Margin="5"
                                          ItemsSource="{Binding AIProviderTemplates}"
                                          SelectedItem="{Binding SelectedAIProviderTemplate}"
                                          DisplayMemberPath="ProviderType"
                                          materialDesign:HintAssist.Hint="Select AI Provider"
                                          Style="{StaticResource MaterialDesignFloatingHintComboBox}" />

                                <PasswordBox Margin="5"
                                             materialDesign:HintAssist.Hint="API Key"
                                             Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                                             materialDesign:PasswordBoxAssist.Password="{Binding AppSettings.General.AIProvider.ApiKey, UpdateSourceTrigger=PropertyChanged}" />

                                <TextBox Margin="5"
                                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                         materialDesign:HintAssist.Hint="Model Name"
                                         Text="{Binding AppSettings.General.AIProvider.Model, UpdateSourceTrigger=PropertyChanged}" />

                                <TextBox Margin="5"
                                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                         materialDesign:HintAssist.Hint="Custom API Endpoint URL"
                                         Text="{Binding AppSettings.General.AIProvider.BaseUrl, UpdateSourceTrigger=PropertyChanged}"
                                         Visibility="{Binding AppSettings.General.AIProvider.IsCustom, Converter={StaticResource BooleanToVisibilityConverter}}" />
                            </StackPanel>
                        </materialDesign:Card>

                        <materialDesign:Card 
                            Background="{DynamicResource MaterialDesignPaper}"
                            Style="{StaticResource SettingsCardStyle}">
                            <StackPanel>
                                <TextBlock Text="Text-to-Speech" Style="{StaticResource SettingsCategoryHeaderStyle}" />

                                <StackPanel Margin="5">
                                    <CheckBox IsChecked="{Binding AppSettings.General.TextToSpeechEnabled}"
                                              Content="Enable Text-to-Speech"/>
                                    <TextBlock Text="Enabling TTS may increase response latency"
                                               Style="{StaticResource SettingsHelpTextStyle}" />
                                </StackPanel>

                                <Grid IsEnabled="{Binding AppSettings.General.TextToSpeechEnabled}">
                                    <StackPanel>
                                        <ComboBox Margin="5" 
                                                  ItemsSource="{Binding TTSProviderTemplates}"
                                                  SelectedItem="{Binding SelectedTtsProviderTemplate}"
                                                  DisplayMemberPath="ProviderType"
                                                  materialDesign:HintAssist.Hint="Select TTS Provider"
                                                  Style="{StaticResource MaterialDesignFloatingHintComboBox}" />

                                        <PasswordBox Margin="5"
                                                     materialDesign:HintAssist.Hint="API Key"
                                                     Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                                                     materialDesign:PasswordBoxAssist.Password="{Binding AppSettings.General.TTSProvider.ApiKey, UpdateSourceTrigger=PropertyChanged}"
                                                     Visibility="{Binding AppSettings.General.TTSProvider.RequiresApiKey, Converter={StaticResource BooleanToVisibilityConverter}}" />

                                        <TextBox Margin="5"
                                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                                 materialDesign:HintAssist.Hint="Voice ID"
                                                 Text="{Binding AppSettings.General.TTSProvider.VoiceId, UpdateSourceTrigger=PropertyChanged}"
                                                 Visibility="{Binding AppSettings.General.TTSProvider.RequiresVoice, Converter={StaticResource BooleanToVisibilityConverter}}" />

                                        <TextBox Margin="5"
                                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                                 materialDesign:HintAssist.Hint="Endpoint URL"
                                                 Text="{Binding AppSettings.General.TTSProvider.BaseUrl, UpdateSourceTrigger=PropertyChanged}"
                                                 Visibility="{Binding AppSettings.General.TTSProvider.RequiresBaseUrl, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </materialDesign:Card>

                        <materialDesign:Card
                            Background="{DynamicResource MaterialDesignPaper}"
                            Style="{StaticResource SettingsCardStyle}">
                            <StackPanel>
                                <TextBlock Text="Startup Options"
                                           Style="{StaticResource SettingsCategoryHeaderStyle}" />

                                <!-- Auto-start with Windows -->
                                <Grid Margin="0 12 0 12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <ToggleButton IsChecked="{Binding Settings.General.AutoStartWithWindows}"
                                                  Style="{StaticResource SettingsToggleStyle}" />

                                    <TextBlock Grid.Column="1" VerticalAlignment="Center"
                                               Text="Auto-start with Windows"
                                               Margin="12 0 0 0" />
                                </Grid>

                                <!-- Minimize to System Tray -->
                                <Grid Margin="0 12 0 12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <ToggleButton IsChecked="{Binding Settings.General.MinimizeToTray}"
                                                  Style="{StaticResource SettingsToggleStyle}" />

                                    <TextBlock Grid.Column="1" VerticalAlignment="Center"
                                               Text="Minimize to System Tray"
                                               Margin="12 0 0 0" />
                                </Grid>
                            </StackPanel>
                        </materialDesign:Card>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- GAME INTEGRATION TAB -->
            <TabItem Header="Game Integration">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="24">
                        <TextBlock Text="Game Integration Settings"
                                   Style="{StaticResource SettingsSectionHeaderStyle}" />

                        <materialDesign:Card
                            Background="{DynamicResource MaterialDesignPaper}"
                            Style="{StaticResource SettingsCardStyle}">
                            <StackPanel>
                                <TextBlock Text="Game Detection"
                                           Style="{StaticResource SettingsCategoryHeaderStyle}" />

                                <!-- Auto-detect running games -->
                                <Grid Margin="0 12 0 12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <ToggleButton IsChecked="{Binding Settings.GameIntegration.Enabled}"
                                                  Style="{StaticResource SettingsToggleStyle}" />

                                    <TextBlock Grid.Column="1" VerticalAlignment="Center"
                                               Text="Auto-detect running games"
                                               Margin="12 0 0 0" />
                                </Grid>

                                <!-- Auto-capture screenshots -->
                                <Grid Margin="0 12 0 12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <ToggleButton IsChecked="{Binding Settings.GameIntegration.AutoCaptureScreenshots}"
                                                  Style="{StaticResource SettingsToggleStyle}" />

                                    <TextBlock Grid.Column="1" VerticalAlignment="Center"
                                               Text="Auto-capture screenshots"
                                               Margin="12 0 0 0" />
                                </Grid>

                                <!-- Scan interval -->
                                <Grid Margin="0 16 0 0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="180" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="Scan interval (seconds)"
                                               VerticalAlignment="Center" />

                                    <TextBox Grid.Column="1"
                                             Style="{StaticResource MaterialDesignTextBox}"
                                             Width="120"
                                             HorizontalAlignment="Left"
                                             Text="{Binding Settings.GameIntegration.ScanInterval}" />
                                </Grid>
                            </StackPanel>
                        </materialDesign:Card>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- KEYBINDS TAB -->
            <TabItem Header="Keybinds">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="24">
                        <TextBlock Text="Keyboard Shortcuts"
                                   Style="{StaticResource SettingsSectionHeaderStyle}" />

                        <materialDesign:Card
                            Background="{DynamicResource MaterialDesignPaper}"
                            Style="{StaticResource SettingsCardStyle}">
                            <StackPanel>
                                <TextBlock Text="Configure keyboard shortcuts to quickly access app features"
                                           TextWrapping="Wrap"
                                           Margin="0 0 0 16" />

                                <ItemsControl ItemsSource="{Binding KeyBindings}" Margin="0 0 0 16">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <materialDesign:Card
                                                Background="{DynamicResource MaterialDesignPaper}"
                                                Style="{StaticResource KeybindCardStyle}">
                                                <Grid Margin="8">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                    </Grid.RowDefinitions>

                                                    <!-- Keybind Name -->
                                                    <TextBlock Text="{Binding Name}"
                                                               Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                                               VerticalAlignment="Center"
                                                               Grid.Column="0"
                                                               Grid.Row="0"
                                                               Margin="0 0 16 0" />

                                                    <!-- Key Visual Representation -->
                                                    <Border Grid.Column="1" Grid.Row="0" Grid.RowSpan="2"
                                                            CornerRadius="6"
                                                            Padding="16 8"
                                                            Margin="0 0 16 0"
                                                            MinWidth="120"
                                                            HorizontalAlignment="Right"
                                                            Background="{DynamicResource MaterialDesignChipBackground}"
                                                            BorderBrush="{DynamicResource MaterialDesignDivider}"
                                                            BorderThickness="1"
                                                            VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding KeyDisplay}"
                                                                   HorizontalAlignment="Center"
                                                                   FontWeight="SemiBold" />
                                                    </Border>

                                                    <!-- Change Button -->
                                                    <Button Grid.Column="2" Grid.Row="0" Grid.RowSpan="2"
                                                            IsEnabled="False"
                                                            Content="{Binding RecordButtonText}"
                                                            Command="{Binding StartRecordingCommand}"
                                                            Style="{StaticResource MaterialDesignOutlinedButton}"
                                                            Margin="0"
                                                            Width="100"
                                                            VerticalAlignment="Center" />

                                                    <!-- Toggle Switches -->
                                                    <StackPanel Grid.Column="0" Grid.Row="1" Orientation="Horizontal"
                                                                Margin="0 12 0 0">
                                                        <StackPanel Orientation="Horizontal" Margin="0 0 24 0">
                                                            <TextBlock Text="Global"
                                                                       VerticalAlignment="Center"
                                                                       Margin="0 0 8 0" />
                                                            <ToggleButton IsChecked="{Binding IsGlobal}"
                                                                          Style="{StaticResource SettingsToggleStyle}" />
                                                        </StackPanel>

                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="Enabled"
                                                                       VerticalAlignment="Center"
                                                                       Margin="0 0 8 0" />
                                                            <ToggleButton IsChecked="{Binding IsEnabled}"
                                                                          Style="{StaticResource SettingsToggleStyle}" />
                                                        </StackPanel>
                                                    </StackPanel>
                                                </Grid>
                                            </materialDesign:Card>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <TextBlock Text="Note: Keybind changing is disabled in this version."
                                           Style="{StaticResource SettingsHelpTextStyle}"
                                           Margin="0 0 0 0" />
                            </StackPanel>
                        </materialDesign:Card>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- ABOUT TAB -->
            <TabItem Header="About">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="24">
                        <TextBlock Text="About Ludere AI"
                                   Style="{StaticResource SettingsSectionHeaderStyle}" />

                        <materialDesign:Card
                            Background="{DynamicResource MaterialDesignPaper}"
                            Style="{StaticResource SettingsCardStyle}">
                            <StackPanel>
                                <StackPanel HorizontalAlignment="Center" Margin="0 0 0 24">
                                    <TextBlock Text="Ludere AI"
                                               Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                               HorizontalAlignment="Center"
                                               Margin="0 0 0 4" />
                                    <TextBlock Text="Made with ❤"
                                               HorizontalAlignment="Center"
                                               Foreground="{DynamicResource MaterialDesignBodyLight}" />
                                </StackPanel>
                            </StackPanel>
                        </materialDesign:Card>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 16 0 0">
            <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                    Margin="0 0 16 0"
                    Height="40"
                    Width="100"
                    Content="Cancel"
                    Command="{Binding CancelCommand}" />
            <Button Style="{StaticResource MaterialDesignRaisedButton}"
                    Margin="0"
                    Height="40"
                    Width="100"
                    Content="Save"
                    Command="{Binding SaveCommand}" />
        </StackPanel>
    </Grid>
</Window>