<Window x:Class="LudereAI.WPF.Views.SettingsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:viewModels="clr-namespace:LudereAI.WPF.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance viewModels:SettingsViewModel}"
        Background="{DynamicResource MaterialDesignBackground}"
        Foreground="{DynamicResource MaterialDesignBody}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Style="{DynamicResource MaterialDesignWindow}"
        FontWeight="Regular"
        FontSize="16"
        TextOptions.TextFormattingMode="Ideal"        
        WindowStartupLocation="CenterScreen"
        Title="Settings" Height="700" Width="900">
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Settings" HorizontalAlignment="Center"
                   Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                   Margin="0 0 0 16"/>

        <TabControl Grid.Row="1"  SelectedIndex="0"
                    Background="{DynamicResource MaterialDesignBackground}"
                    Foreground="{DynamicResource MaterialDesignBody}"
                    Style="{StaticResource MaterialDesignTabControl}">
            <TabItem Header="General">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="16">
                        <TextBlock Text="General Settings"
                                 Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                 Margin="0 0 0 16"/>
                        
                        <materialDesign:Card Padding="16" Margin="0 0 0 16">
                            <StackPanel>
                                <TextBlock Text="Language"
                                         Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                         Margin="0 0 0 8"/>
                                <ComboBox materialDesign:HintAssist.Hint="Select language" 
                                          ItemsSource="{Binding Languages}"
                                          SelectedItem="{Binding Settings.General.Language}"
                                          Margin="0 8 0 0">
                                </ComboBox>
                            </StackPanel>
                        </materialDesign:Card>
                        
                        <materialDesign:Card Padding="16" Margin="0 0 0 16">
                            <StackPanel>
                                <TextBlock Text="Application Theme"
                                           Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                           Margin="0 0 0 8"/>
                                <ComboBox materialDesign:HintAssist.Hint="Select theme"
                                            ItemsSource="{Binding Themes}"
                                            SelectedItem="{Binding Settings.General.Theme}"
                                            Margin="0 8 0 0">
                                </ComboBox>
                            </StackPanel>
                        </materialDesign:Card>

                        <materialDesign:Card Padding="16">
                            <StackPanel>
                                <TextBlock Text="Startup Options"
                                         Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                         Margin="0 0 0 8"/>
                                <CheckBox Content="Auto-start with Windows" 
                                          IsChecked="{Binding Settings.General.AutoStartWithWindows}" Margin="0 0 0 8"/>
                                <CheckBox Content="Minimize to System Tray" 
                                          IsChecked="{Binding Settings.General.MinimizeToTray}" Margin="0 0 0 8"/>
                                <CheckBox Content="Check for Updates Automatically" 
                                          IsChecked="{Binding Settings.General.AutoCheckForUpdates}" Margin="0 0 0 8"/>
                            </StackPanel>
                        </materialDesign:Card>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <TabItem Header="Game Integration">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="16">
                        <TextBlock Text="Game Integration Settings"
                                 Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                 Margin="0 0 0 16"/>
                        
                        <materialDesign:Card Padding="16">
                            <StackPanel>
                                <TextBlock Text="Game Detection"
                                           Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                           Margin="0 0 0 16">
                                </TextBlock>
                                
                                <CheckBox Content="Auto-detect running games"
                                            IsChecked="{Binding Settings.GameIntegration.Enabled}"
                                          Margin="0 0 0 8"/>
                                
                                <CheckBox Content="Auto-capture screenshots"
                                          IsChecked="{Binding Settings.GameIntegration.AutoCaptureScreenshots}"
                                          Margin="0 0 0 8"/>
                                
                                <DockPanel Margin="0,8">
                                    <TextBlock Text="Scan interval (seconds)"/>
                                    <TextBox Style="{StaticResource MaterialDesignTextBox}"
                                             HorizontalAlignment="Left"
                                             Width="120"
                                             Margin="8 0 0 0"
                                             Text="{Binding Settings.GameIntegration.ScanInterval}"/>
                                </DockPanel>
                            </StackPanel>
                        </materialDesign:Card>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Privacy">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="16">
                        <TextBlock Text="Data Settings"
                                 Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                 Margin="0 0 0 16"/>
                        
                        <materialDesign:Card Padding="16">
                            <StackPanel>
                                <CheckBox Content="Allow anonymous data collection"
                                          IsChecked="{Binding Settings.Privacy.AllowUsageStatistics}"
                                          Margin="0 0 0 8"/>
                                <CheckBox Content="Allow storage of captured screenshots for analysis and model training"
                                            IsChecked="{Binding Settings.Privacy.AllowScreenshotStorage}"
                                          Margin="0 0 0 8"/>
                            </StackPanel>
                        </materialDesign:Card>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="About">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="16">
                        
                        <materialDesign:Card Padding="16">
                            <StackPanel>
                                
                            </StackPanel>
                        </materialDesign:Card>
                        
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                    Margin="0 0 8 0"
                    Height="40"
                    Width="80"
                    Content="Save"
                    Command="{Binding SaveCommand}"/>
            <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                    Margin="0 0 8 0"
                    Height="40"
                    Width="80"
                    Content="Cancel"
                    Command="{Binding LoadCommand}"/>
        </StackPanel>
    </Grid>
</Window>
